<style type="text/css">
	.form-sub-2{
		display: block;
		margin-left: auto;
		margin-right: auto;
	}
  .field{
    font-size: 20px;
    color: #82b548;
  }
</style>
<div class="border-form-div-2">
<%= simple_form_for @result, url: user_results_path, method: :post do |f| %>

  <% if @result != nil %>
    <% if @result.errors.any? %>
       <div class="alert alert-error alert-block"><button aria-hidden="true" class="close" data-dismiss="alert" type="button">Ã—</button>
        <ul>
          <% @result.errors.full_messages.each do |msg| %>
          <%= content_tag :li, msg, :id => "error_#{msg}" if msg.is_a?(String) %>
      <% end %>
        </ul>
      </div>
    <% end %>
  <% end %>


<div class="field">
  <%= f.input :quarter, collection: ['Q1', 'Q2', 'Q3', 'Q4'] %>
</div><br/>
<div class="field">
  <%= f.input :year, collection: ['2015', '2016', '2017', '2018', '2019', '2020', '2021', '2022', '2023', '2025', '2026', '2027', '2028', '2029', '2030'] %>
</div><br/>
<div class="field">
  <%= f.input :summary %>
</div><br/>
        
<div class="col-lg-12">
      <br>
  <%= f.button :submit, "Create Appraisal", :class=>"btn btn-success form-sub-2" %>
</div>

<% end %>
</div>
