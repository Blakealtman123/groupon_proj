<style type="text/css">
	.form-sub-2{
		display: block;
		margin-left: auto;
		margin-right: auto;
	}
  .field{
    font-size: 20px;
    color: #82b548;
  }
</style>
<div class="border-form-div-2">
<%= simple_form_for @result, url: user_results_path, method: :post do |f| %>

  <% if @result != nil %>
    <% if @result.errors.any? %>
      <div id="error_explanation">
        <h2><%= pluralize(@result.errors.count, "error") %> prohibited this user from being saved:</h2>
        <ul>
          <% @result.errors.full_messages.each do |msg| %>
          <li><%= msg %></li>
          <% end %>
        </ul>
      </div>
    <% end %>
  <% end %>

<div class="field">
  <%= f.input :quarter, collection: ['Q1', 'Q2', 'Q3', 'Q4'] %>
</div><br/>
<div class="field">
  <%= f.input :year, collection: ['2015', '2016', '2017', '2018', '2019', '2020', '2021', '2022', '2023', '2025', '2026', '2027', '2028', '2029', '2030'] %>
</div><br/>
<div class="field">
  <%= f.input :summary %>
</div>
<div class="field">
  <%= f.button :submit, "Create Appraisal", :class=>"btn btn-success form-sub-2" %>
</div>

<% end %>
</div>
