<style type="text/css">
	.form-sub-2{
		display: block;
		margin-left: auto;
		margin-right: auto;
	}
</style>
<div class="border-form-div-2">
<%= simple_form_for @result, url: user_results_path, method: :post do |f| %>

  <% if @result != nil %>
    <% if @result.errors.any? %>
       <div class="alert alert-error alert-block"><button aria-hidden="true" class="close" data-dismiss="alert" type="button">Ã—</button>
        <ul>
          <% @result.errors.full_messages.each do |msg| %>
          <%= content_tag :li, msg, :id => "error_#{msg}" if msg.is_a?(String) %>
      <% end %>
        </ul>
      </div>
    <% end %>
  <% end %>

 <div class="col-lg-12">
      <br>
      <div class="row">
         <div class="col-md-4 col-md-offset-4 text-left">
          <%= f.label :quarter, class: "col-sm-6 control-label" %>
          <div class="col-sm-6">
  <%= f.select :quarter, quarter: ['Q1', 'Q2', 'Q3', 'Q4'] %>
 </div>
         </div>
      </div>
   </div>
 <div class="col-lg-12">
      <br>
      <div class="row">
         <div class="col-md-4 col-md-offset-4 text-left">
         <%= f.label :year, class: "col-sm-6 control-label" %>
          <div class="col-sm-6">
  <%= f.select :year, year: ['2015', '2016', '2017', '2018', '2019', '2020', '2021', '2022', '2023', '2025', '2026', '2027', '2028', '2029', '2030'] %>
</div>
         </div>
      </div>
   </div>
<div class="col-lg-12">
      <br>
      <div class="row">
         <div class="col-md-4 col-md-offset-4 text-left">
         <%= f.label :summary, class: "col-sm-6 control-label" %>
          <div class="col-sm-6">
  <%= f.text_area :summary %>
</div>
         </div>
      </div>
   </div>
<div class="col-lg-12">
      <br>
  <%= f.button :submit, "Create Appraisal", :class=>"btn btn-success form-sub-2" %>
</div>

<% end %>
</div>
