<div class = "row">
	<div class="col-xs-2">
	</div>
	<div class="col-xs-8">
		<% if current_user != @user %>
			<% if @user.last_name[-1] != 's' %>
				<h1><%= @user.first_name %> <%= @user.last_name %>'s Appraisal Reports</h1> 
				<%= button_to "Delete Employee", @user, :method => :delete, data: {confirm: "Are you sure you want to delete #{@user.first_name} #{@user.last_name} from Grouppraisal?"} %><br>
			<% else %>
				<h1><%= @user.first_name %> <%= @user.last_name %>' Appraisal Reports</h1>
				<%= button_to "Delete Employee", @user, :method => :delete, data: {confirm: "Are you sure you want to delete #{@user.first_name} #{@user.last_name} from Grouppraisal?"} %><br>
			<% end %>
		<% else %>
			<% if current_user.role == 'employee' %>
				<h1>Your Appraisal Reports</h1>
			<% else %>
				<h1>Hey <%= current_user.first_name %>!</h1>
			<% end %>
		<% end %>
	</div>
	<div class="col-xs-2">
		<% if current_user.role == 'admin' && @user != current_user %>
			<div class = "add"> <%= link_to 'Add New Appraisal', new_user_result_path(@user), class: "btn btn-success",  :method => :get %>
			</div>
		<% end %> 
	</div>
</div>


<% if @results.empty? %>
	<% if current_user.role != 'admin' %>
		<h2>You do not have any appraisals at this time</h2>
	<% end %>

<% else %>

	<% @results.each do |result| %>
		<h2><%= result.quarter %> <%= result.year %></h2>
		<h3><%= result.summary %> </h3>
		<% if current_user.role == 'admin' %>
			<%= button_to "Remove", user_result_path(result.user_id, result),  :method => :delete, data: {confirm: "Are you sure you want to delete this appraisal?"} %>
			<%= button_to 'Edit', edit_user_result_path(result.user_id, result),  :method => :get %>
			
		<% end %>
		<% if result != @results.last %>	
			<hr/>
		<% end %>
	<% end %>
<% end %>







