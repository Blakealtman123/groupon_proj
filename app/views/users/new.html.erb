<body><br><br><br><br>
  <h1>Add New Employee</h1>



  <%= simple_form_for User.new, url: create_user_path do |f| %>

  <% if @user != nil %>
    <% if @user.errors.any? %>
      <div id="error_explanation">
        <h2><%= pluralize(@user.errors.count, "error") %> prohibited this user from being saved:</h2>
        <ul>
          <% @user.errors.full_messages.each do |msg| %>
          <li><%= msg %></li>
          <% end %>
        </ul>
      </div>
    <% end %>
  <% end %>

    <div class="field">
      <%= f.input :first_name, placeholder: "First Name" %>
    </div>

    <div class="field">
      <%= f.input :last_name, placeholder: "Last Name" %>
    </div>


    <div class="field">
      <%= f.input :job_title, collection: ['Business Intelligence', 'Cape Town Sales Manager',  'Cape Town Sales', 'CEO', 'City Planner', 'City Planner Manager', 'CS', 'CS Manager', 'CS Team Leader', 'Durban Sales', 'Durban City Manager', 'Editorial', 'Editorial Manager', 'Finance', 'Finance Manager', 'Goods Administrator', 'Goods Manager', 'Goods Sales', 'HR Manager', 'Johannesburg Sales', 'Logistics', 'Logistics Manager', 'Pretoria Sales', 'Pretoria Sales Manager', 'Product Designer', 'PRM', 'PRM Manager', 'QA', 'Sales Manager', 'Strategic Accounts', 'Telesales', 'Telesales Manager', 'Travel', 'Business Intelligence Manager', 'Marketing Associate', 'Marketing Manager', 'Johannesburg Sales Manager', 'Strategic Accounts Manager', 'HR Trainer', 'HR Administrator'], placeholder: "Job Title" %>
    </div>

    <div class="field">
      <%= f.input :email, placeholder: "Email Address" %>
    </div>

    <div class="field">
      <%= f.input :role, as: :string, label: "Check box to make admin:" do %>
        <%= f.check_box :role, {}, "admin", "employee" %>
      <% end %>
    </div>


    <br>

    <div class="actions">
      <%= f.button :submit, "Add Employee" %>
    </div>
    <% end %>

  </body>

